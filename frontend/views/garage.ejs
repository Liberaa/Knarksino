<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Gonzo's Quest Megaways</title>
  <link rel="stylesheet" href="/css/garage.css" />
  <style>
    .topbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: #111;
      color: #fff;
      padding: 10px 20px;
      z-index: 999;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .topbar form input {
      margin-right: 5px;
    }

    .logout {
      margin-right: 30px;
    }


    body {
      padding-top: 60px;
    }
  </style>
</head>
<video id="rain-overlay" autoplay muted loop playsinline>
  <source src="../img/rain.webm" type="video/webm">
</video>
<body>
  <div class="topbar">
    <% if (user && user.id) { %>
      <div>
        <strong><%= user.username %></strong> |
        Balance: <span id="topbar-balance"><%= user.balance.toFixed(2) %></span>
      </div>
      <a href="/logout" class="logout"><button>Logout</button></a>
    <% } else { %>
      <div class="dropdown">
        <div class="dropdown-button">Login â–¼</div>
        <div class="dropdown-content">
          <form id="login-form" onsubmit="return false;">
            <input name="username" placeholder="Username" required>
            <input name="password" type="password" required placeholder="Password">
            <button type="submit">Login</button>
          </form>
        </div>
      </div>
    <% } %>
  </div>

  <div class="game-container">
    <div class="header">
      <h1>Knarksino Megaway</h1>
      <div id="multiplier">Multiplier: x1</div>
    </div>

    <div class="game-ui">
      <div id="balance-display">
        <% if (user && user.id) { %>
          Balance: <span id="balance"><%= user.balance.toFixed(2) %></span>
        <% } else { %>
          user42069: $<span id="balance">0.00</span>
        <% } %>
      </div>
      <div id="bet-input">
        Bet amount: $<input type="number" id="bet-amount" value="100" min="1">
      </div>
    </div>

    <div class="reels" id="reels"></div>

    <div class="controls">
      <button id="spinButton">ðŸŽ¯ Spin</button>
      <div id="message"></div>
    </div>
  </div>

<script>
  const balanceFromServer = <%= user ? user.balance : 0 %>;
  window.userIsLoggedIn = <%= user && user.id ? 'true' : 'false' %>;
</script>

  <script src="/src/garage.js"></script>
<script>
  document.querySelectorAll('.dropdown-button').forEach(button => {
    button.addEventListener('click', (e) => {
      e.stopPropagation();
      document.querySelectorAll('.dropdown').forEach(d => d.classList.remove('open'));
      button.parentElement.classList.toggle('open');
    });
  });

  window.addEventListener('click', () => {
    document.querySelectorAll('.dropdown').forEach(d => d.classList.remove('open'));
  });

  document.querySelectorAll('.dropdown-content').forEach(content => {
    content.addEventListener('click', e => e.stopPropagation());
  });

  // ðŸš€ LOGIN FORM SUBMIT HANDLER
  document.querySelectorAll('.dropdown-content form').forEach(form => {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const body = JSON.stringify({
        username: formData.get('username'),
        password: formData.get('password')
      });

      const res = await fetch('/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body
      });

      const result = await res.json();
      if (result.success) {
        location.reload(); // âœ… Reload on success to update user UI
      } else {
        alert(result.message || 'Login failed');
      }
    });
  });
</script>
<script src="/src/all.js"></script>
</body>
</html>
