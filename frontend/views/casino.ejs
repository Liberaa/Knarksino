<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Knarksino Roulette</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/casino.css">
</head>
<body>
  <div class="game-container">
    <div class="game-table">
      <!-- LEFT: Roulette Wheel -->
      <div class="wheel-section">
        <div class="wheel-placeholder">
          <p>ðŸŽ¡ Wheel Placeholder</p>
        </div>
      </div>

      <!-- RIGHT: Betting Table -->
      <div class="betting-section">
        <div class="bet-grid">
          <!-- Row for numbers -->
          <div class="zero">0</div>
          <!-- Main grid -->
          <div class="grid">
            <% for(let r = 0; r < 3; r++) { %>
              <% for(let c = 0; c < 12; c++) { 
                const num = (3 * c) + (3 - r); %>
                <div class="bet-cell <%= (num % 2 === 0 ? 'black' : 'red') %>"><%= num %></div>
              <% } %>
            <% } %>
          </div>

          <!-- Outside Bets -->
          <div class="outside-bets">
            <div class="outside">1st 12</div>
            <div class="outside">2nd 12</div>
            <div class="outside">3rd 12</div>
            <div class="outside">Even</div>
            <div class="outside red">Red</div>
            <div class="outside black">Black</div>
            <div class="outside">Odd</div>
          </div>
        </div>
      </div>
    </div>

    <!-- BOTTOM: Controls -->
    <div class="controls">
      <button>Place Bet</button>
      <button>Spin</button>
      <div class="status">
        <p>Bet: $<span id="bet-amount">0</span></p>
        <p>Win: $<span id="win-amount">0</span></p>
      </div>
    </div>
  </div>

  <script src="/src/casino.js"></script>
</body>
</html>
